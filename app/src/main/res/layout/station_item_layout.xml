<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layoutDirection="rtl">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:background="@drawable/station_list_custom_background"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#075e54"
            android:layoutDirection="rtl"
            android:orientation="horizontal"
            android:padding="5dp"
            android:textDirection="rtl">

            <ImageView
                android:id="@+id/iv_stationLogo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:src="@mipmap/ic_launcher" />

            <TextView
                android:id="@+id/tv_stationTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="دروازه دولت ( کد 11025 )"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#FFFF" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingRight="2dp"
            android:paddingLeft="2dp"
            android:paddingTop="0dp"
            android:paddingBottom="2dp"
            android:orientation="horizontal">

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal">

                    <TextView
                        android:id="@+id/TextView0412"
                        android:layout_weight="1"
                        android:background="#c1e7a0"
                        android:gravity="center"
                        android:padding="20dip"
                        android:text="خطوط عبوری"
                        android:textColor="#000000" />

                    <TextView
                        android:id="@+id/TextView0423"
                        android:layout_weight="1"
                        android:background="#e1ffc7"
                        android:gravity="center"
                        android:padding="20dip"
                        android:text="زمان ورود ایستگاه"
                        android:textColor="#000000" />
                </TableRow>
                <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal">

                    <TextView
                        android:id="@+id/TextView02r41"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:padding="20dip"
                        android:text="خط 405"
                        android:background="#f5f5f5"
                        android:textColor="#000000" />

                    <TextView
                        android:id="@+id/TextView0y442"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:background="#ffffff"
                        android:padding="20dip"
                        android:text="5 دقیقه"
                        android:textColor="#000000" />
                </TableRow>
                <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal">

                    <TextView
                        android:id="@+id/TextView0241"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:padding="20dip"
                        android:background="#f5f5f5"
                        android:text="خط 405"
                        android:textColor="#000000" />

                    <TextView
                        android:id="@+id/TextView0442"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:background="#ffffff"
                        android:padding="20dip"
                        android:text="5 دقیقه"
                        android:textColor="#000000" />
                </TableRow>
            </TableLayout>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>